    function abrirPopUpForm(json) {

        //$("#txtid").val(0);

        if (json != null) {

            $("#nroDocumento").val(json.NumeroDoc);
            $("#asunto").val(json.Asunto);
            $("#referencia").val(json.Referencia);
            $("#empresa").val(json.NombreEmpresa);
