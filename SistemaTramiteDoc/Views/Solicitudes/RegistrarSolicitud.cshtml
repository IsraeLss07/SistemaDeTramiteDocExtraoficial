    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- DataTables CSS (opcional, pero recomendado para el diseño) -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">

    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Incluye Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<!-- Select2 JS -->
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
</head>
<body>
    <style>
        .dataTables_filter {
            display: none;
        }

        .bg-primary-dark {
            background-color: #1d3872; /* Un azul más oscuro */
        }

        .btn-primary-dark {
            background-color: #1d3872; /* Un azul más oscuro */
            color: white; /* Color de la letra */
            border-color: #1d3872; /* Color del borde */
        }

        .nav-link-custom {
            background-color: #1d3872; /* Fondo azul oscuro */
            color: white; /* Letra blanca */
        }

        .icon-button {
            border: none;
            background: none;
            cursor: pointer;
            font-size: 24px;
            color: #007bff;
        }

            .icon-button:hover {
                color: #0056b3;
            }
        .file-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 5px 10px;
        margin-bottom: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
        background-color: #f9f9f9;
    }

    .file-item button {
        margin-left: 10px;
    }            
    </style>

    <div class="container mt-4">
        <div class="card">
            <div class="card-header bg-primary-dark text-white d-flex align-items-center justify-content-between">
                <div class="d-flex flex-column align-items-center">
                    <div class="d-flex align-items-center">
                        <a href="/Solicitudes/Inicio" class="me-3">
                            <i class="bi bi-house-door" style="cursor: pointer; font-size: 1.5rem; color: white;"></i>
                        </a>
                        <span class="fw-bold">Sistema de trámite documentario-Nuevo Expediente</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form id="solicitudForm" enctype="multipart/form-data">
                    <div class="row g-3">
                        <!-- Primera columna -->
                        <div class="col-md-5 me-0.5">
                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label for="nroDocumento" class="form-label">Nro Documento:</label>
                                    <input type="text" class="form-control" id="nroDocumento" placeholder="Ingrese el nro de documento">
                                    <div id="nroDocumentoError" class="text-danger" style="display: none;">El número de documento ya está registrado.</div>
                                </div>
                                <div class="col-md-12">
                                    <label for="asunto" class="form-label">Asunto:</label>
                                    <input type="text" class="form-control" id="asunto" placeholder="Ingrese el asunto del documento">
                                </div>
                                <div class="col-md-12">
                                    <label for="referencia" class="form-label">Referencia:</label>
                                    <textarea class="form-control" id="referencia" rows="3" placeholder="Ingrese la referencia del documento"></textarea>
                                </div>
                                <div class="col-md-12">
                                    <div class="row g-0">
                                        <div class="col-md-6">
                                            <label for="empresa" class="form-label">Empresa:</label>
                                            <select class="form-select" id="empresa" name="empresa">
                                                <option selected></option>
                                                @foreach (var empresa in ViewBag.Empresas)
                                                {
                                                    <option value="@empresa.EmpresaId">@empresa.EmpresaNombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="tipoDoc" class="form-label">Tipo documento:</label>
                                            <select class="form-select" id="tipoDoc">
                                                <option selected></option>
                                                @foreach (var tipoDocumento in ViewBag.TipoDocumentos)
                                                {
                                                    <option value="@tipoDocumento.TipoDocumentoId">@tipoDocumento.TipoDocumentoNombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row g-0">
                                        <div class="col-md-6">
                                            <label for="formato" class="form-label">Formato:</label>
                                            <select class="form-select" id="formato">
                                                <option selected></option>
                                                @foreach (var formato in ViewBag.Formatos)
                                                {
                                                    <option value="@formato.FormatoId">@formato.FormatoNombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="institucion" class="form-label">Institucion:</label>
                                            <select class="form-select" id="institucion">
                                                <option selected></option>
                                                @foreach (var institucion in ViewBag.Instituciones)
                                                {
                                                    <option value="@institucion.InstitucionId">@institucion.InstitucionNombre</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row g-0">
                                        <div class="col-md-6">
                                            <label for="proyecto" class="form-label">Proyecto:</label>
                                            <select class="form-select" id="proyecto">
                                                <option selected></option>
                                                @foreach (var proyecto in ViewBag.Proyectos)
                                                {
                                                    <option value="@proyecto.ProyectoId">@proyecto.ProyectoNombre</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="plazo" class="form-label">Plazo atencion(en dias):</label>
                                            <input type="text" class="form-control" id="plazo" placeholder="Ingrese el plazo">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row g-0">
                                        <div class="col-md-6">
                                            <label for="penalidad" class="form-label">Penalidad:</label>
                                            <input type="text" class="form-control" id="penalidad" placeholder="Ingrese la penalidad">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1 d-flex justify-content-center">
                            <div style="border-left: 4px solid #1d3872 ; height: 100%; ">
                            </div>
                        </div>
                        <!-- Segunda columna -->
                        <div class="col-md-6">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label for="fechaEmision" class="form-label">Fecha emisión:</label>
                                    <input type="date" class="form-control" id="fechaEmision">
                                </div>
                                <div class="col-md-3">
                                    <label for="fechaRecepcion" class="form-label">Fecha recepción:</label>
                                    <input type="date" class="form-control" id="fechaRecepcion">
                                </div>
                                <div class="col-md-3">
                                    <label for="fVenInterno" class="form-label">F. Ven. Interno:</label>
                                    <input type="date" class="form-control" id="fVenInterno">
                                </div>
                                <div class="col-md-3">
                                    <label for="fVenExterno" class="form-label">F. Ven. Externo:</label>
                                    <input type="date" class="form-control" id="fVenExterno">
                                </div>
                                <div class="col-md-12" style="height: 20px;">
                                    <label for="referencia" class="form-label"> Documentos adjuntos:</label>
                                </div>
                                <div class="mb-3 border rounded p-3" style="background-color: white; height: 140px; overflow-y: auto;">
                                    <div class="file-upload mb-3">
                                        <span id="file-status" class="small">There is nothing attached.</span>
                                        <input type="file" id="file-input" name="Archivos" style="display: none;" multiple>
                                        <div>
                                            <a class="attach-file small" id="attach-file" style="cursor: pointer; color: black; text-decoration: none;">
                                                <i class="bi bi-paperclip"></i> Attach file
                                            </a>
                                        </div>
                                    </div>
                                    <div id="file-list" class="mt-2"></div>
                                </div>
                                <div class="mb-3">
                                    <label for="ubicacion" class="form-label">Ubicacion:</label>
                                    <div class="row g-3 align-items-center">
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="piso" placeholder="Ingrese el piso">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="estante" placeholder="Ingrese el estante">
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" class="form-control" id="file" placeholder="Ingrese el file">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row g-0">
                                        <div class="col-md-6">
                                            <label for="analista" class="form-label">Asignar Analista:</label>
                                            <select class="form-select" id="analista">
                                                <option selected></option>
                                                @foreach (var analistas in ViewBag.Analistas)
                                                {
                                                    <option value="@analistas.IdUsuario">@analistas.Nombres</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top: 80px;"></div>
                                <!-- Botones -->
                                <div class="row mt-5">
                                    <div class="col-md-8 ms-auto text-end">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button class="btn btn-primary-dark w-100" id="btnRegistrar" disabled onclick="abrirConfirmacion(event)">Registrar</button>
                                            </div>
                                            <div class="col-md-6">
                                                <button class="btn btn-primary-dark w-100" onclick="window.location.href = '/Solicitudes/Inicio';">Cancelar</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                ¿Desea confirmar el registro del expediente?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmButton">Aceptar</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>

