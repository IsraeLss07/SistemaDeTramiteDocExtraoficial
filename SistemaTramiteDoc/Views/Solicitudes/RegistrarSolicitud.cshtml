        formData.append("NombreProyecto", $("#proyecto option:selected").text());
        formData.append("Penalidad", $("#penalidad").val());
        formData.append("NombreInstitucion", $("#institucion option:selected").text());
        formData.append("TipoDoc", $("#tipoDoc option:selected").text());
        formData.append("PlazoAtc", $("#plazo").val());
        formData.append("FechaVencInterno", $("#fVenInterno").val());
        formData.append("FechaEventoExterno", $("#fVenExterno").val());
        formData.append("FechaEmision", $("#fechaEmision").val());
        formData.append("FechaRecepcion", $("#fechaRecepcion").val());
        formData.append("Piso", $("#piso").val());
        formData.append("Estante", $("#estante").val());
        formData.append("File", $("#file").val());
        formData.append("AnalistaNombre", $("#analista option:selected").text());
        
        //console.log(request);

        // Añadir archivos al FormData
        const files = $('#file-input')[0].files;
        for (let i = 0; i < selectedFiles.length; i++) {
            formData.append("Archivos[" + i + "]", selectedFiles[i]);
            formData.append("NombresArchivos[" + i + "]", selectedFiles[i].name);
            formData.append("ContentTypes[" + i + "]", selectedFiles[i].type);
        }
        // Mostrar los valores del FormData en la consola
        for (var pair of formData.entries()) {
            console.log(pair[0] + ': ' + pair[1]);
        }
        // Imprimir el nombre del segundo archivo si existe
        if (selectedFiles.length > 1) {
            console.log("Nombre del segundo archivo: " + selectedFiles[1].name);
        } else {
            console.log("No hay un segundo archivo.");
        }

        jQuery.ajax({
            url: $.MisUrls.url._GuardarSolicitud,
