<script>
    var tabladata;
    var tabladata2;
    let selectedFiles = []; 

    $(document).ready(function () {
        var today = new Date().toISOString().split('T')[0];

        // Asignar la fecha actual a los campos de entrada de tipo date
        $('#fechaEmision').val(today);
        $('#fechaRecepcion').val(today);
        $('#fVenInterno').val(today);
        $('#fVenExterno').val(today);

        $('#fechaRecepcion').attr('min', today);

        $(document).ready(function () {
            function checkFields() {
                let allFilled = true;
                $('input, select, textarea').each(function () {
                    if ($(this).attr('id') !== 'file-input' && $(this).attr('id') !== 'analista'   && $(this).val() === '') {
                        allFilled = false;
                        return false;
                    }
                });
                $('#btnRegistrar').prop('disabled', !allFilled);
            }

            $('input, select, textarea').on('input change', checkFields);

            // Llama a la función una vez al cargar la página para establecer el estado inicial del botón
            checkFields();
        });
