                areasExternas.hide();
            } else if (target === "areas-tab") {
                roleSpan.text("Colaborador");
                addNewButton.hide();
                areasExternas.show();
            }
        });
        $('#institucion').select2({
            placeholder: 'Seleccione una institución',
            allowClear: true
        });
        
        $('#nroDocumento').on('input', function () {
            var nroDocumento = $(this).val();
            if (nroDocumento) {
                $.ajax({
                    url: '@Url.Action("VerificarNumeroDocumento", "Solicitudes")', // URL del método del controlador
                    type: 'GET',
                    data: { numeroDoc: nroDocumento },
                    success: function (data) {
                        if (data.existe) {
                            $('#nroDocumentoError').show();
                            $('#btnRegistrar').prop('disabled', true);
                        } else {
                            $('#nroDocumentoError').hide();
                            checkFields(); // Revisa si todos los campos están llenos
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            } else {
                $('#nroDocumentoError').hide();
                checkFields(); // Revisa si todos los campos están llenos
            }
        });

    })

    $('#areas-tab').on('shown.bs.tab', function (e) {
        if (!$.fn.DataTable.isDataTable('#tbdata2')) {
