<script type="text/javascript">
        $.extend({ MisUrls: { url: {}, urls: function (a) { $.extend($.MisUrls.url, a); } } });


        //CONTROLADOR VistaColaborador:

        $.MisUrls.urls({ _ObtenerSubSolicitudesColaboradores: '@Url.Action("Obtener", "VistaColaborador")' });
        $.MisUrls.urls({ _CambiarEstadoSubSolicitud: '@Url.Action("CambiarEstadoSubSolicitud", "VistaColaborador")' });

        //lenguaje español datatable
        $.MisUrls.urls({
            Url_datatable_spanish: '@Url.Content("~/content/plugins/datatables/js/datatable_spanish.json")'
