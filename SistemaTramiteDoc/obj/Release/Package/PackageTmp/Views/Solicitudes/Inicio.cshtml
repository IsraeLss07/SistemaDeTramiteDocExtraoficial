        function handleTabChange(target) {
            var roleSpan = $("#user-role");
            var addNewButton = $("#addNewButton");
            var areasExternas = $("#AreasExternas");

            if (target === "general-tab") {
                roleSpan.text("Analista Legal");
                addNewButton.show();
                areasExternas.hide();
            } else if (target === "areas-tab") {
                roleSpan.text("Colaborador");
                addNewButton.hide();
                areasExternas.show();
            } else if (target === "aprobadores-tab") {
                roleSpan.text("Aprobador");
                addNewButton.hide();
                areasExternas.show();
            }
        }

        // Mostrar/ocultar pestañas según los roles del usuario
        if (roleId.includes(1)) {
            $('#general-tab').show();
        } else {
            $('#general-tab').hide();
        }

        if (roleId.includes(3)) {
            $('#areas-tab').show();
        } else {
            $('#areas-tab').hide();
        }

        if (roleId.includes(4)) {
            $('#aprobadores-tab').show();
        } else {
            $('#aprobadores-tab').hide();
        }

        // Manejar el evento de cambio de pestaña
        $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
            var target = $(e.target).attr("id"); // Obtener el id de la pestaña activada
            handleTabChange(target);
        });

